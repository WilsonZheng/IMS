@model IMS.ViewModels.InvitationViewModel
<div class="col-md-offset-3 col-md-6 col-xs-12">
    @using (Html.BeginForm(Model.Id.HasValue ? "Update" : "Create", "Recruit", null, FormMethod.Post, new { @class = "form", name = "form" }))
    {
        @Html.HiddenFor(m => m.Id)
        <h3>@string.Format("{0} Invitation",Model.Id.HasValue?"Modify":"Create")</h3>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            <input type="submit" name="submit" value="Save" class="btn btn-default" />
        </div>   
        <div class="footer">
            @Html.ValidationSummary(true)
        </div>
    }
</div>
<div class="clearfix"></div>