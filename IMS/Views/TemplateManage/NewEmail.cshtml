@model IMS.Models.NewEmailTemplateViewModel
@using (Html.BeginForm("NewEmail", "TemplateManage", null, FormMethod.Post, new { @class = "form", name = "login-form" }))
{
    
            <h3>Template</h3>
                <div class="form-group">
                   <select>
                       <option value="ET">Email</option>
                       <option value="CT">Contract</option>
                   </select>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m =>m.Name , new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", placeholder = "Content" })<br />
                    @Html.ValidationMessageFor(m => m.Content)
                </div>
                <input style="margin: 0px" type="submit" name="submit" value="Save" class="btn btn-primary btn-block" />
           
            <div class="footer">
                @Html.ValidationSummary(true)
            </div>
}