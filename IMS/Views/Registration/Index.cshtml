
@{
    ViewBag.Title = "Index";
}
<head>
    
    <script src="~/Scripts/kendo.all.min.js"></script>
    
</head>
<h2>Registration Form</h2>
<body>
    <div id="userinfo">
        <div class="demo-section k-content">
            <ul class="fieldlist">
                <li>
                    <label for="firstname">First Name</label>
                    <input id="firstname" type="text" class="k-textbox" style="width: 100%;" />
                </li>
                <li>
                    <label for="lastname">Last Name</label>
                    <input id="lastname" type="text" class="k-textbox" style="width: 100%;" />
                </li>
                <li>
                    <label for="address">Address</label>
                    <input id="address" type="text" class="k-textbox" style="width: 100%;" />
                </li>
                <li>
                    <label for="mobile">Mobile Number</label>
                    <input id="mobile" type="text" class="k-textbox" style="width: 100%;" />
                </li>
                <li>
                    <label for="email">Email</label>
                    <input id="email" type="text" class="k-textbox" style="width: 100%;" />
                </li>
                <li>
                    <label for="medical">Medical Condition</label>
                    <textarea id="medical" class="k-textbox" style="width: 100%;"></textarea>
                </li>

                <ul class="fieldlist">
                    <li>
                        <input type="radio" name="visa" id="workingvisa" class="k-radio">
                        <label class="k-radio-label" for="workingvisa">Working Visa</label>
                    </li>
                    <li>
                        <input type="radio" name="visa" id="pr" class="k-radio">
                        <label class="k-radio-label" for="pr">Permanent Resident</label>
                    </li>
                    <li>
                        <input type="radio" name="visa" id="citizen" class="k-radio">
                        <label class="k-radio-label" for="citizen">Citizen</label>
                    </li>
                    <li>
                        <input type="radio" name="visa" id="student" class="k-radio">
                        <label class="k-radio-label" for="student">Student Visa</label>
                    </li>
                </ul>
            </ul>
            <style>
                .fieldlist {
                    margin: 0 0 -2em;
                    padding: 0;
                }

                    .fieldlist li {
                        list-style: none;
                        padding-bottom: 2em;
                    }

                    .fieldlist label {
                        display: block;
                        padding-bottom: 1em;
                        font-weight: bold;
                        text-transform: uppercase;
                        font-size: 12px;
                        color: #444;
                    }
            </style>
        </div>
    </div>

</body>
